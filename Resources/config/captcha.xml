<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="genemu.form.captcha.code_encoder.default" class="Genemu\Bundle\FormBundle\Captcha\DefaultCodeEncoder" public="false">
            <argument>%secret%</argument>
        </service>

        <service id="genemu.form.captcha.code_generator.default" class="Genemu\Bundle\FormBundle\Captcha\DefaultCodeGenerator" public="false">
        </service>

        <service id="genemu.form.captcha.font_resolver" class="Genemu\Bundle\FormBundle\Captcha\DefaultFontResolver" public="false">
            <argument type="service" id="kernel" />
            <argument>@GenemuFormBundle/Resources/fonts/</argument>
        </service>

        <service id="genemu.form.captcha.service" class="Genemu\Bundle\FormBundle\Captcha\CaptchaService" public="false">
            <argument />
            <argument />
            <argument type="service" id="genemu.form.captcha.font_resolver" />
            <argument type="service" id="session" />
        </service>

        <service id="genemu.form.captcha.validator" class="Genemu\Bundle\FormBundle\Form\Core\Validator\CaptchaValidator">
            <argument type="service" id="genemu.form.captcha.service" />
            <argument />
        </service>

        <service id="genemu.form.core.type.captcha" class="Genemu\Bundle\FormBundle\Form\Core\Type\CaptchaType">
            <tag name="form.type" alias="genemu_captcha" />
            <argument type="service" id="genemu.form.captcha.service" />
            <argument type="service" id="genemu.form.captcha.validator" />
            <argument>%genemu.form.captcha.options%</argument>
        </service>
    </services>

</container>